<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Light application theme -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar" />
    <style name="DialogBaseTheme" parent="android:Theme.Material.Light.Dialog" />
    <style name="AlertDialogBaseTheme" parent="android:Theme.Material.Light.Dialog.Alert" />

    <style name="DialogStyle" parent="DialogBaseTheme" >
        <item name="android:colorAccent">#ff2581df</item>
    </style>

    <style name="AlertDialogStyle" parent="AlertDialogBaseTheme" >
        <item name="android:colorAccent">#ff2581df</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimary">#ff2581df</item>
        <item name="android:colorPrimaryDark">#ff1b5fa4</item>
        <item name="android:colorAccent">#ff2581df</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- Light application AppCompat theme -->
    <style name="AppCompatBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppCompatTheme" parent="AppCompatBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">#ff2581df</item>
        <item name="colorPrimaryDark">#ff1b5fa4</item>
        <item name="colorAccent">#ff2581df</item>
        <item name="dialogTheme">@style/DialogStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- Dark application theme -->
    <style name="AppBaseThemeDark" parent="android:Theme.Material" />
    <style name="DialogBaseThemeDark" parent="android:Theme.Material.Dialog" />
    <style name="AlertDialogBaseThemeDark" parent="android:Theme.Material.Dialog.Alert" />

    <style name="DialogStyleDark" parent="DialogBaseThemeDark" >
        <item name="android:colorAccent">#ff2581df</item>
    </style>

    <style name="AlertDialogStyleDark" parent="AlertDialogBaseThemeDark" >
        <item name="android:colorAccent">#ff2581df</item>
    </style>

    <style name="AppThemeDark" parent="AppBaseThemeDark">
        <item name="android:colorAccent">#ff2581df</item>
        <item name="android:dialogTheme">@style/DialogStyleDark</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleDark</item>
    </style>

    <!-- Dark application AppCompat theme -->
    <style name="AppCompatBaseThemeDark" parent="Theme.AppCompat" />
    <style name="AppCompatThemeDark" parent="AppCompatBaseThemeDark">
        <item name="colorAccent">#ff2581df</item>
        <item name="dialogTheme">@style/DialogStyleDark</item>
        <item name="alertDialogTheme">@style/AlertDialogStyleDark</item>
    </style>

    <!-- AppLauncher labels -->
    <style name="AppLauncherTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize" tools:ignore="SpUsage">11dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- QuickApp tile dialog -->
    <style name="QuickAppTileTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize" tools:ignore="SpUsage">11dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- QS DetailListAdapter -->
    <style name="TextAppearance" />

    <style name="TextAppearance.QS">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.QS.DetailEmpty">
        <item name="android:textSize">@dimen/qs_detail_empty_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="VisualizerControl">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
